---
import { Blog } from "../types/Blog";

interface Props {
	title: string;
	body: string;
	href: string;
	publishedAt: string;
	labels: string[];
	thumbnail: string;
}
const { title, body, href, publishedAt, labels, thumbnail } = Astro.props;
---

<div
	class="max-w-2xl m-3 px-8 py-4 bg-white rounded-lg shadow-md dark:bg-gray-800"
>
	<div class="flex items-center justify-between">
		<span class="text-sm font-light text-gray-600 dark:text-gray-400"
			>{publishedAt}</span
		>
		<a
			class="px-3 py-1 text-sm font-bold text-gray-100 transition-colors duration-300 transform bg-gray-600 rounded cursor-pointer hover:bg-gray-500"
			tabindex="0"
			role="button"
		>
			{labels[0]}
		</a>
	</div>

	<div class="mt-2">
		<a
			href={href}
			class="text-xl font-bold text-gray-700 dark:text-white hover:text-gray-600 dark:hover:text-gray-200 hover:underline"
			tabindex="0"
			role="link">{title}</a
		>
		<p class="mt-2 text-gray-600 dark:text-gray-300">{body}</p>
	</div>

	<div class="flex items-center justify-between mt-4">
		<a
			href={href}
			class="text-blue-600 dark:text-blue-400 hover:underline"
			tabindex="0"
			role="link">続きを読む</a
		>

		<div class="flex items-center">
			<img
				class="hidden object-cover w-10 h-10 mx-4 rounded-full sm:block"
				src={thumbnail}
				alt="avatar"
			/>
			<a
				class="font-bold text-gray-700 cursor-pointer dark:text-gray-200"
				tabindex="0"
				role="link">{}</a
			>
		</div>
	</div>
</div>
