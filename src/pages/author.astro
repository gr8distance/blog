---
import Layout from "../layouts/Layout.astro";
import { AuthorTemplate } from "../templates/AuthorTemplate";
import type { Author } from "../types/author";
import { AuthorEvent } from "../types/author";

const author: Author = {
  name: "UG",
  bio: "自転車愛好家、プログラマー、冒険家",
  avatar: "https://example.com/avatar.jpg",
  links: {
    twitter: "https://twitter.com/ug",
    github: "https://github.com/ug",
    strava: "https://www.strava.com/athletes/ug",
    bluesky: "https://bsky.app/profile/ug.bsky.social",
  },
};

const buildEvent = (
  id: string,
  date: string,
  title: string,
  type: string,
  description: string,
) => {
  return new AuthorEvent(id, date, title, type, description);
};

const events: AuthorEvent[] = [
  buildEvent(
    "1",
    "2024-05-15",
    "富士ヒルクライム2024",
    "race",
    "標高差約1,270mを駆け上がる壮大なチャレンジ",
  ),
  buildEvent(
    "2",
    "2024-03-20",
    "ブルベ300km 東京",
    "brevet",
    "東京近郊を巡る300kmの長距離ライド",
  ),
  buildEvent(
    "3",
    "2024-09-01",
    "Izu Trail Journey 2024",
    "future",
    "伊豆半島を一周する壮大なトレイルランニング",
  ),
  buildEvent("4", "1990-06-22", "爆誕", "life", "人生が始まった"),
];
---

<Layout title="著者について | My Blog">
  <AuthorTemplate client:load author={author} events={events} />
</Layout>
